<div class="row d-flex justify-content-center"></div>
<h3>Welcome {{name}} </h3>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a new course:</h3>

    <form class="form new-course-form">
      <div class="form-group">
        <label for="course-title">Title:</label>
        <input class="form-input" type="text" id="course-title" name="course-title" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>

      {{#if courses.length}}
  <div class="col-md-6 course-list">
    {{#each courses as |course|}}
    <div>
      <div>
        <h4><a href="/course/{{course.id}}">{{course.course_title}}</a></h4>
      </div>
      <div>
        <button type="button" id="delete" data-id="{{course.id}}" class="btn btn-danger">Delete</button>
        
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/course.js"></script>
</div>