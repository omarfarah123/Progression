<style>
* {
  box-sizing: border-box;
}
body {
    background-color: rgb(205, 201, 201);
}

#brick{
    display: flex;
    justify-content: center;
    font-size: 350px;
}
#clickMe{
    display: flex;
    justify-content: center;
    font-size: 50px;
    font-weight: 700;
    color: gold;
}
#brickCount{
    display: flex;
    justify-content: center;
    font-size: 30px;
    font-weight: 700;
    color: limegreen;
}
#brick:hover {
  animation: shake 0.5s;
  animation-iteration-count: infinite;
}
#totalTime {
    display: flex;
    justify-content: center;
    font-size: 50px;
    font-weight:700;
    color: limegreen;
    text-align: center;
}

@keyframes shake {
  0% { transform: translate(1px, 1px) rotate(0deg); }
  10% { transform: translate(-1px, -2px) rotate(-1deg); }
  20% { transform: translate(-3px, 0px) rotate(1deg); }
  30% { transform: translate(3px, 2px) rotate(0deg); }
  40% { transform: translate(1px, -1px) rotate(1deg); }
  50% { transform: translate(-1px, 2px) rotate(-1deg); }
  60% { transform: translate(-3px, 1px) rotate(0deg); }
  70% { transform: translate(3px, 1px) rotate(-1deg); }
  80% { transform: translate(-1px, -1px) rotate(1deg); }
  90% { transform: translate(1px, 2px) rotate(0deg); }
  100% { transform: translate(1px, -2px) rotate(-1deg); }
}

.timeline {
  display: flex;
  flex-direction: column-reverse;
  flex-wrap: wrap;
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
}


/* Container around content */
.container {
  flex: 1;
  padding: 10px 40px;
  position: relative;
  background-color: inherit;
  width: 50%;
}




/* The actual content */
.content {
  width:fit-content;
  padding: 20px 30px;
  background-color: rgb(74, 13, 13);
  position: relative;
  border-radius: 6px;
  color: white;
}




/* Media queries - Responsive timeline on screens less than 600px wide */
@media screen and (max-width: 600px) {
  /* Place the timelime to the left */
  .timeline::after {
  left: 50px;
  }
  
  /* Media queries - Responsive timeline on screens less than 600px wide */
@media screen and (max-width: 700px) {
  /* Place the timelime to the left */
  .timeline::after {
  left: 50px;
  }
  
/* Media queries - Responsive timeline on screens less than 600px wide */
@media screen and (max-width: 800px) {
  /* Place the timelime to the left */
  .timeline::after {
  left: 50px;
  }
  .container {
  width: 100%;
  padding-left: 70px;
  padding-right: 25px;
  }
  


}
</style>

<script>
let userBricks = document.getElementById('brickCount').innerText
let brickCount = parseInt(userBricks.slice(7));
/*Getting Users total study time*/
document.getElementById('brick').addEventListener('click', function() {
let minutes = brickCount * 20;
    function timeConvert(n) {
            var num = n;
            var hours = (num / 60);
            var rhours = Math.floor(hours);
            var minutes = (hours - rhours) * 60;
            var rminutes = Math.round(minutes);
            if(rhours >= 1){
                return rhours + " hour and " + rminutes + " minutes of total study time.";
            } else if(rhours === 0) {
                return "0 hours and " + rminutes + " minutes of total study time.";
            } else {
              return "0 hours and 0 minutes of total study time.";
            }
    }
    document.getElementById("totalTime").innerText = timeConvert(minutes)
})
</script>